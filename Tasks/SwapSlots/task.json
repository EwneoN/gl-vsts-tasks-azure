{
    "id": "8698E535-D070-4A41-8C0E-4624D6283F05",
    "name": "SwapSlots",
    "friendlyName": "Azure Web App Slots Swapping",
    "description": "Swap two deployment slots of an Azure Web App",
    "helpMarkDown": "[More Information](https://github.com/geeklearningio/gl-vsts-tasks-azure/wiki/SwapSlots) (Version #{Version}#)",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Geek Learning",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 2
    },
    "demands": [
        "azureps"
    ],
    "minimumAgentVersion": "1.103.0",
    "instanceNameFormat": "Swap Azure Web App slots: $(SourceSlot) to $(DestinationSlot)",
    "inputs": [
        {
            "name": "ConnectedServiceNameSelector",
            "type": "pickList",
            "label": "Azure Connection Type",
            "required": false,
            "helpMarkDown": "",
            "defaultValue": "ConnectedServiceName",
            "options": {
                "ConnectedServiceName": "Azure Classic",
                "ConnectedServiceNameARM": "Azure Resource Manager"
            }
        },
        {
            "name": "ConnectedServiceName",
            "type": "connectedService:Azure",
            "label": "Azure Classic Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Azure Classic subscription to target for swapping Web App deployment slots",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceName"
        },
        {
            "name": "ConnectedServiceNameARM",
            "type": "connectedService:AzureRM",
            "label": "Azure RM Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Azure Resource Manager subscription to target for swapping Web App deployment slots",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceNameARM"
        },
        {
            "name": "WebAppName",
            "type": "string",
            "label": "Web App Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Enter the name of an existing Azure Web Application",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceName"
        },
        {
            "name": "WebAppNameARM",
            "type": "pickList",
            "label": "Web App Name",
            "defaultValue": "",
            "required": true,
            "properties": {
                "EditableOptions": "True"
            },
            "helpMarkDown": "Enter or Select the name of an existing AzureRM Web Application",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceNameARM"
        },                       
        {
            "name": "SourceSlot",
            "type": "string",
            "label": "Source Slot",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceName"
        },
        {
            "name": "SourceSlotNameARM",
            "type": "pickList",
            "label": "Source Slot",
            "defaultValue": "",
            "required": true,
            "properties": {
                "EditableOptions": "True"
            },
            "helpMarkDown": "Enter or Select an existing Slot",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceNameARM"
        },        
        {
            "name": "DestinationSlot",
            "type": "string",
            "label": "Destination Slot",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceName"
        },
        {
            "name": "DestinationSlotNameARM",
            "type": "pickList",
            "label": "Destination Slot",
            "defaultValue": "",
            "required": true,
            "properties": {
                "EditableOptions": "True"
            },
            "helpMarkDown": "Enter or Select an existing Slot",
            "visibleRule": "ConnectedServiceNameSelector = ConnectedServiceNameARM"
        }
    ],
    "dataSourceBindings": [
        {
            "target": "WebAppNameARM",
            "endpointId": "$(ConnectedServiceName)",
            "dataSourceName": "AzureRMWebAppNames"
        },
        {
            "target": "SourceSlotNameARM",
            "endpointId": "$(ConnectedServiceName)",
            "dataSourceName": "AzureRMWebAppSlotsId",
            "parameters": {
                "WebAppName": "$(WebAppName)"
            },
            "resultTemplate": "{\"Value\":\"{{{ #extractResource slots}}}\",\"DisplayValue\":\"{{{ #extractResource slots}}}\"}"
        },
        {
            "target": "DestinationSlotNameARM",
            "endpointId": "$(ConnectedServiceName)",
            "dataSourceName": "AzureRMWebAppSlotsId",
            "parameters": {
                "WebAppName": "$(WebAppName)"
            },
            "resultTemplate": "{\"Value\":\"{{{ #extractResource slots}}}\",\"DisplayValue\":\"{{{ #extractResource slots}}}\"}"
        }
    ],
    "execution": {
        "AzurePowerShell": {
            "target": "$(currentDirectory)\\SwapSlots.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}