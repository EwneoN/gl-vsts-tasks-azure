{
    "manifestVersion": 1,
    "id": "gl-vsts-tasks-azure",
    "name": "Microsoft Azure Build and Release Tasks",
    "version": "0.0.0",
    "publisher": "geeklearningio",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Build and publish your applications on Microsoft Azure using these Build and Release Management tasks.",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "extension-icon.png"
    },
    "tags": [
        "Azure",
        "Resource Manager",
        "WebApp",
        "Swap",
        "Start",
        "Stop",
        "SQL",
        "Restore",
        "DACPAC"
    ],
    "screenshots": [
        {
            "path": "Screenshots/TestBuild.png"
        },
        {
            "path": "Screenshots/Add-Tasks.png"
        }
    ],
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "LICENSE.txt"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks-azure/wiki"
        },
        "support": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks-azure/issues"
        },
        "repository": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks-azure"
        },
        "issues": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks-azure/issues"
        }
    },
    "branding": {
        "color": "#008B8B",
        "theme": "dark"
    },
    "files": [
        {
            "path": "Tasks"
        },
        {
            "path": "Screenshots",
            "addressable": true
        }
    ]
}
